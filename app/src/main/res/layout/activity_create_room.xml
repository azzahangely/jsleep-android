<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEC1E3"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    tools:context=".CreateRoomActivity">


    <TextView
        android:id="@+id/CreateRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="506dp"
        android:fontFamily="serif"
        android:text="Create Room"
        android:textAlignment="center"
        android:textColor="#644971"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnCreate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="133dp"
        android:ems="15"
        android:hint="Price"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editName" />

    <EditText
        android:id="@+id/editAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="133dp"
        android:ems="15"
        android:hint="Address"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPrice" />

    <EditText
        android:id="@+id/editSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="133dp"
        android:ems="15"
        android:hint="Size"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAddress" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="133dp"
        android:ems="15"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CreateRoom" />


    <TextView
        android:id="@+id/TextFacility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="306dp"
        android:text="Facility"
        android:textColor="#9A64A4"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSize" />


    <Spinner
        android:id="@+id/city_options"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="250dp"
        android:layout_marginStart="159dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="44dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/btnCreate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bed_options"
        app:layout_constraintTop_toBottomOf="@+id/AC"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/bed_options"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="250dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Refrigerator"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/SwimmingPool"
        android:layout_width="131dp"
        android:layout_height="33dp"
        android:layout_marginHorizontal="270dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:buttonTint="#9A64A4"
        android:clickable="true"
        android:text="Swimming Pool"
        android:textColor="#7D7B7B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextFacility" />

    <CheckBox
        android:id="@+id/WiFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="80dp"
        android:buttonTint="#9A64A4"
        android:clickable="true"
        android:text="WiFi"
        android:textColor="#7D7B7B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FitnessCenter" />

    <CheckBox
        android:id="@+id/FitnessCenter"
        android:layout_width="152dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="145dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="68dp"
        android:buttonTint="#9A64A4"
        android:clickable="true"
        android:text="Fitness Center"
        android:textColor="#7D7B7B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSize" />

    <CheckBox
        android:id="@+id/Bathtub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:buttonTint="#9A64A4"
        android:clickable="true"
        android:text="Bathtub"
        android:textColor="#7D7B7B"
        app:layout_constraintEnd_toStartOf="@+id/AC"
        app:layout_constraintTop_toBottomOf="@+id/Balcony" />

    <CheckBox
        android:id="@+id/AC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="88dp"
        android:buttonTint="#9A64A4"
        android:clickable="true"
        android:text="AC"
        android:textColor="#7D7B7B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WiFi" />

    <CheckBox
        android:id="@+id/Refrigerator"
        android:layout_width="132dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="270dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:buttonTint="#9A64A4"
        android:text="Refrigerator"
        android:textColor="#7D7B7B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Restaurant" />

    <CheckBox
        android:id="@+id/Restaurant"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="145dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:buttonTint="#9A64A4"
        android:clickable="true"
        android:text="Restaurant"
        android:textColor="#7D7B7B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SwimmingPool" />

    <CheckBox
        android:id="@+id/Balcony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="145dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:buttonTint="#9A64A4"
        android:text="Balcony"
        android:textColor="#7D7B7B"
        app:layout_constraintEnd_toStartOf="@+id/WiFi"
        app:layout_constraintTop_toBottomOf="@+id/FitnessCenter" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="100dp"
        android:layout_marginTop="74dp"
        android:backgroundTint="#8D65A0"
        android:text="Create"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Refrigerator" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="37dp"
        android:layout_marginEnd="96dp"
        android:backgroundTint="#8D65A0"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_options" />

</androidx.constraintlayout.widget.ConstraintLayout>